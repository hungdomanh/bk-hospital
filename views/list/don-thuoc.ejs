<% include ../layout.ejs %>

<script src="/javascripts/list.js"></script>

<div class='content' ng-controller="donthuocCtrl">
	<div class="container">
		<div class='row search-add-sort'>
			<div class='col-xs-5 search'>
				Tìm Kiếm: <input type="text" ng-model='search'> {{donthuoc.length}} Đơn Thuốc
			</div>
			<div class='col-xs-2 add'>
				
			</div>
			<div class='col-xs-5 sort' ng-init="sort='mab'">
				Sắp xếp:
				<select ng-model="sort">
					<option value ="makb">Mã Khám Bệnh</option>					
					<option value ="mat">Mã thuốc</option>
					<option value ="hoten">Họ tên</option>
					<option value ="thuoc">Thuốc</option>
					<option value ="soluong">Số lượng</option>
					<option value ="gia">Giá (VNĐ)</option>					
		        </select>
			</div>
		</div>

		<table>
			<tr class="days">
				<th scope ="col" >Họ tên</th>				
				<th scope ="col" >Mã Khám Bệnh</th>
				<th scope ="col" >Mã thuốc</th>
				<th scope ="col" >Thuốc</th>
				<th scope ="col" >Số lượng</th>
				<th scope ="col" >Giá (VNĐ)</th>
		     </tr>
		  <tr ng-repeat="x in donthuoc | orderBy: sort | filter: search track by $index">
		    <td>{{ x.hoten}}</td>
		    <td>{{ x.makb}}</td>
		    <td>{{ x.mat}}</td>
		    <td>{{ x.thuoc}}</td>
		    <td>{{ x.soluong}}</td>
		    <td>{{ x.gia}}</td>
		  </tr>
		</table>

	</div>  <!-- container -->
</div>  <!-- controller -->

<script>
	app.controller('donthuocCtrl', ['$scope', function($scope){

		var s = '<%-data%>';
		var data = JSON.parse(s);
		$scope.donthuoc = data;

	}]);

</script>




