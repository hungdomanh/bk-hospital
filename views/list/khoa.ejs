<% include ../layout.ejs %>

<script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.4.8/angular.min.js"></script>
<script src="/javascripts/list.js"></script>

<div class='content' ng-controller="khoaCtrl">
	<div class="container">
		<div class='row'>
			<div id="search" class='col-xs-5'>
				Tìm Kiếm: <input type="text" ng-model='search'>
			</div>
			<div id="add" class='col-xs-2'>
				<button ng-click="setAdd()" data-target='#addFormModal' data-toggle="modal" id="addButton" ng-show=<%-type=='boss'%>>
					Thêm mới
				</button>
			</div>
			<div id="sort" class='col-xs-5' ng-init="sort='mak'">
				Sắp xếp:
				<select ng-model="sort">
		          <option value="mak">Mã Khoa</option>
		          <option value="khoa">Tên Khoa</option>
		        </select>
			</div>
		</div>

		<table>
		  <tr ng-repeat="x in data | orderBy: sort | filter: search track by $index">

		    <td>{{ x.mak}}</td>
		    <td>{{ x.khoa }}</td>
		    <td ng-show=<%-type=='boss'%> >
		    	<button ng-click="setEdit(x.mak)" id="editButton" data-target='#editFormModal' data-toggle="modal" >
		    		Sửa
		    	</button>
		    	<a ng-href="/delete-khoa/{{x.mak}}">
		    	<button id="deleteButton" >Xóa</button>
		    	</a>
		    </td>

		  </tr>
		</table>

	<!-- Add Form Modal -->
	<div class="modal fade" id="addFormModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
	  <div class="modal-dialog" role="document">
	    <div class="modal-content">
	    <form action="/add-khoa" method="post">
		      <div class="modal-header">
		        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>Thêm mới</h4>
		      </div>
		      <div class="modal-body">
		        Mã Khoa: {{makAdd}} <input type="hidden" value={{makAdd}} name="mak">
		        <br>
		        <br>
		        Khoa Mới: <input type="text" name="khoa">
		      </div>
		      <div class="modal-footer">
		        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
		        <button type="submit" class="btn btn-primary" value="Save">Save</button>
		      </div>
	     </form>
	    </div>
	  </div>
	</div>



	<!-- Edit Form Modal -->
	<div class="modal fade" id="editFormModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
	  <div class="modal-dialog" role="document">
	    <div class="modal-content">
	    <form action="/edit-khoa" method="post">
		      <div class="modal-header">
		        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>Chỉnh sửa</h4>
		      </div>
		      <div class="modal-body">
		        Mã Khoa: {{makEdit}} <input type="hidden" value={{makEdit}} name="mak">
		        <br>
		        <br>
		        Khoa: <input type="text" value={{khoaEdit}} name="khoa">
		      </div>
		      <div class="modal-footer">
		        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
		        <button type="submit" class="btn btn-primary" value="Save">Save</button>
		      </div>
	     </form>
	    </div>
	  </div>
	</div>


	</div>  <!-- container -->
</div>  <!-- controller -->

<script>
	app.controller('khoaCtrl', ['$scope', function($scope){

		 var s = '<%-data%>';
		 var data = JSON.parse(s);
		 // console.log(data.length); 
		 $scope.data = data;

		 $scope.setEdit = function(index){
		 	for(var i =0; i<data.length; i++) {
		 		if(data[i].mak == index)	{
		 			$scope.makEdit = data[i].mak;
		 			$scope.khoaEdit = data[i].khoa;
		 		}
		 	}
		 }

		$scope.setAdd = function(index){
			var test = 0;
		 	for(var i =0; i<data.length-1; i++) {
		 		if(data[i+1].mak - data[i].mak > 1) {
		 			$scope.makAdd = data[i].mak+1;
		 			test = 1;
		 		}
		 	}
		 	if(test == 0) {
		 		$scope.makAdd = data[data.length-1].mak+1;
		 	}
		 };


	}]);

</script>



